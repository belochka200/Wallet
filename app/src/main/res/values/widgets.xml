<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Wallet.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Wallet.Toolbar</item>
    </style>

    <style name="Widget.Wallet.CollapsingToolbar.Large" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="android:background">?attr/colorSurfaceContainer</item>
    </style>

    <style name="Widget.Wallet.CardViewFilledStyle" parent="Widget.Material3.CardView.Filled">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Wallet.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Wallet.LinearProgressIndicator</item>
        <item name="hideAnimationBehavior">outward</item>
        <item name="showAnimationBehavior">inward</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>